{% extends "base.html.twig" %}

{% block content%}
    <h1>Ajouter une recette</h1>
    <form method="POST" enctype='multipart/form-data'>
        <div class="form-group">
            <label>Titre</label>
            <input type="text" name="title" class="form-control">
        </div>
        <div class="form-group">
            <label>Votre image de recette</label>
            <input type="file" name="file" class="form-control">
        </div>
        <div class="form-group">
            <label>Catégorie</label>
            <select name="category" class="form-control">
                <option value="">Choisissez une catégorie</option>
                {% for item in categoryList %}
                    <option value="{{ item.id }}">
                        {{ item.category_name}}
                    </option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>Ingrédient</label>
            <input type="text" name="ingredient" class="form-control">
        </div>
        <div class="form-group">
            <label>Difficulté</label>
            <select name="difficulty" class="form-control">
                <option value="">Choisissez votre difficulté</option>
                {% for item in difficultyList %}
                    <option value="{{ item.id }}">
                        {{ item.difficulty_label}}
                    </option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>Descriptif</label>
            <input type="text" name="description" class="form-control">
        </div>
        <div class="form-group">
            <label>Suite d'instructions</label>
            <textarea name="instructions" class="form-control" rows="5"></textarea>
        </div>
        <div class="form-group">
            <label>Temps de préparation</label>
            <input type="number" name="preparation" class="form-control">
        </div>
        <div class="form-group">
            <label>Temps de cuisson</label>
            <input type="number" name="cooking" class="form-control">
        </div>
        <div class="form-group">
            <label>Tags</label>
            <input type="text" name="tags" class="form-control">
        </div>
        <button type="submit" name="submit" class="btn btn-success btn-block">
            Valider
        </button>
    </form>
{% endblock %}